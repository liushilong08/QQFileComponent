<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_clickable_rect_with_trans_solid"
        android:layout_margin="4dp">
    
    <cn.xxt.commons.widget.RecyclerImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:src="@drawable/bg_placeholder_loading"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/v_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@color/half_trans_black"
        android:visibility="gone"/>

    <cn.xxt.commons.widget.IconFontTextView
        android:id="@+id/iftv_choose_tag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:textSize="24dp"
        android:gravity="top|right"
        android:textColor="@color/stress_clickable"
        android:text="@string/iconfont_not_choosed"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="1dp"/>

    </RelativeLayout>

</RelativeLayout>
